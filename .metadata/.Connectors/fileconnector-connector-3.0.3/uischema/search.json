{
  "connectorName": "file",
  "operationName": "search",
  "title": "Search",
  "help": "<h1>Search</h1><b>The search operation finds a file or folder based on a given file pattern or directory pattern in a specified location.</b><br><br><ul><li><a href=\"https://ei.docs.wso2.com/en/latest/micro-integrator/references/connectors/file-connector/file-connector-config/\"> More Help </a></li></ul>",
  "elements": [
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "General",
        "elements": [
          {
            "type": "attributeGroup",
            "value": {
              "groupName": "Basic",
              "elements": [
                {
                  "type": "attribute",
                  "value": {
                    "name": "source",
                    "displayName": "Source",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "The location of the file. This can be a file on the local physical file system or a file on an FTP server."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "filePattern",
                    "displayName": "File Pattern",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "The pattern of the files to be read. (e.g., [a-zA-Z][a-zA-Z]*.(txt|xml|jar))."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "recursiveSearch",
                    "displayName": "Recursive Search",
                    "inputType": "booleanOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "Whether you are searching recursively."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "setTimeout",
                    "displayName": "Timeout",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "The timeout value on the JSC (Java Secure Channel) session in milliseconds. E.g., 100000."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "setPassiveMode",
                    "displayName": "Passive mode",
                    "inputType": "booleanOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "Set to true if you want to enable passive mode."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "setSoTimeout",
                    "displayName": "Socket Timeout",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "The socket timeout value for the FTP client. E.g., 100000."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "setUserDirIsRoot",
                    "displayName": "Is user directory root?",
                    "inputType": "booleanOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "Set to true if you want to use root as the user directory."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "setStrictHostKeyChecking",
                    "displayName": "Strict Host Key Checking",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "Sets the requirement to use host key checking. E.g., no."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "includeParentDirectory",
                    "displayName": "Include Parent Directory",
                    "inputType": "booleanOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "Set to true if you want to include the parent directory."
                  }
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
