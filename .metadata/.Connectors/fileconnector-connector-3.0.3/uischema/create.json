{
  "connectorName": "file",
  "operationName": "create",
  "title": "Create",
  "help": "<h1>Create</h1><b>The create operation creates a file or folder in a specified location. When creating a file, you can either create the file with content or without content.</b><br><br><ul><li><a href=\"https://ei.docs.wso2.com/en/latest/micro-integrator/references/connectors/file-connector/file-connector-config/\"> More Help </a></li></ul>",
  "elements": [
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "General",
        "elements": [
          {
            "type": "attributeGroup",
            "value": {
              "groupName": "Basic",
              "elements": [
                {
                  "type": "attribute",
                  "value": {
                    "name": "filePath",
                    "displayName": "File Path",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "The location of the file. This can be a file on the local physical file system or a file on an FTP server."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "inputContent",
                    "displayName": "Input Content",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "The content of the file."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "encoding",
                    "displayName": "Encoding",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "The encoding that is supported. Possible values are US-ASCII, UTF-8, and UTF-16."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "isBinaryContent",
                    "displayName": "Is Binary Content?",
                    "inputType": "booleanOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "Set to true if input content should be handled as binary data. Input content is expected to be base64 encoded binary content."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "setTimeout",
                    "displayName": "Set Timeout",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "The timeout value on the JSC (Java Secure Channel) session in milliseconds. E.g., 100000."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "setPassiveMode",
                    "displayName": "Passive mode",
                    "inputType": "booleanOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "Set to true if you want to enable passive mode."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "setSoTimeout",
                    "displayName": "Socket Timeout",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "The socket timeout value for the FTP client. E.g., 100000."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "setUserDirIsRoot",
                    "displayName": "Is user directory root?",
                    "inputType": "booleanOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "Set to true if you want to use root as the user directory."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "setStrictHostKeyChecking",
                    "displayName": "Strict Host Key Checking",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "Sets the requirement to use host key checking. E.g., no."
                  }
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
