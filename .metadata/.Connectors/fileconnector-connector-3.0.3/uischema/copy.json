{
  "connectorName": "file",
  "operationName": "copy",
  "title": "Copy",
  "help": "<h1>Copy</h1><b>The copy operation copies files from one location to another. This operation can be used when you want to copy any kind of files and large files as well. You can also copy particular files with specified file patterns.</b><br><br><ul><li><a href=\"https://ei.docs.wso2.com/en/latest/micro-integrator/references/connectors/file-connector/file-connector-config/\"> More Help </a></li></ul>",
  "elements": [
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "General",
        "elements": [
          {
            "type": "attributeGroup",
            "value": {
              "groupName": "Basic",
              "elements": [
                {
                  "type": "attribute",
                  "value": {
                    "name": "source",
                    "displayName": "Source",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "The location of the file. This can be a file on the local physical file system or a file on an FTP server."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "destination",
                    "displayName": "Destination",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "true",
                    "helpTip": "The location where the file has to be copied to."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "filePattern",
                    "displayName": "File Pattern",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "The pattern of the files to be copied. (e.g., [a-zA-Z][a-zA-Z]*.(txt|xml|jar))."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "setTimeout",
                    "displayName": "Timeout",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "The timeout value on the JSC (Java Secure Channel) session in milliseconds. E.g., 100000."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "setPassiveMode",
                    "displayName": "Passive mode",
                    "inputType": "booleanOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "Set to true if you want to enable passive mode."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "setSoTimeout",
                    "displayName": "Socket Timeout",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "The socket timeout value for the FTP client. E.g., 100000."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "setUserDirIsRoot",
                    "displayName": "Is user directory root?",
                    "inputType": "booleanOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "Set to true if you want to use root as the user directory."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "setStrictHostKeyChecking",
                    "displayName": "Strict Host Key Checking",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "Sets the requirement to use host key checking. E.g., no."
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "includeParentDirectory",
                    "displayName": "Include Parent Directory",
                    "inputType": "booleanOrExpression",
                    "defaultValue": "",
                    "required": "false",
                    "helpTip": "Set to true if you want to include the parent directory."
                  }
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
